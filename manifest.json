{
    "manifest_version": 3,
    "name": "Cookiekeeper",
    "version": "1.0",
    "description": "Load a user-specified cookie when a website is opened.",
    "host_permissions": [
        "http://*/*",
        "https://*/*"
      ],
    "permissions": [ "storage",
    "webNavigation",
    "storage",
    "cookies"],
    "action": {
      "default_icon": "cookie.png",
      "default_title": "Cookie Loader",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  